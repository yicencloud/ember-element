<label
  role="radio"
  aria-checked={{this.checked}}
  aria-disabled={{this.disabled}}
  class="el-radio-button {{if this.size (concat "el-radio-button--" this.size)}} {{if this.active "is-active"}} {{if this.disabled "is-disabled"}}"
>
  <input
    disabled={{this.disabled}}
    type="radio"
    checked={{this.checked}}
    name={{@name}}
    class="el-radio-button__orig-radio"
    value={{@label}}
    onclick={{this.handleChange}}
  />
  <span class="el-radio-button__inner" style={{if this.checked this.buttonStyle}}>
    {{yield}}
  </span>
</label>